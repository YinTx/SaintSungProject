<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/resultMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                />
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                >
                <AutoCompleteTextView
                    android:id="@+id/bureauNo"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:completionThreshold="4"
                    android:digits="0123456789"
                    android:maxLength="22"
                    android:layout_height="wrap_content"
                    android:hint="@string/scanCodeBureau"
                    />
                <ImageButton
                    android:id="@+id/scanBureauNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_crop_free_white_36dp"
                    />
            </LinearLayout>

<LinearLayout
    android:layout_margin="10dp"
    android:id="@+id/ll_parent"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="vertical"
    android:gravity="center"
    >
    <ListView
        android:id="@+id/siteTypeList"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="经度：130.515151212100"
            android:layout_margin="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/longitude"

            android:layout_width="0dp"
            android:layout_weight= "1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="纬度：130.515151212100"
            />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/main_location2"
                />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        >
        <ImageButton
            android:id="@+id/pic_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/pic_orderwork"
            />
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/sub_userDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            />
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>