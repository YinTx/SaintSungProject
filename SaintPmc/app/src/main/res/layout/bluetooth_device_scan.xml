<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<TextView android:id="@+id/connectedDeviceName"  
	    android:text="@string/connectedDeviceName"  
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:layout_marginLeft="5dip"  
	    android:textColor="#000000"  
	    android:textSize="18sp" />  
	<ListView android:id="@+id/connectedDeviceList"  
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content"/>  
	<TextView android:id="@+id/disconnectedDeviceName"
	    android:text="@string/disconnectedDeviceName"	     
	    android:layout_width="wrap_content"  
	    android:layout_height="wrap_content" 
	    android:layout_marginLeft="5dip"  
	    android:textColor="#000000"  
	    android:textSize="18sp" />  
	<ListView android:id="@+id/disconnectedDeviceList"
	    android:layout_width="match_parent"  
	    android:layout_height="wrap_content"/>  

  
    
</LinearLayout>
